    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Github - Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/githunter-scraper.js",
            "args": [
                "--scraperPoint",
                "trending",
                "--provider",
                "github",
                "--nodes",
                "pullsV12"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gitlab - Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/githunter-scraper.js",
            "args": [
                "--scraperPoint",
                "trending",
                "--provider",
                "gitlab",
                "--nodes",
                "pullsV12"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server - Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/githunter-scraper.js",
            "args": [
                "--server"
            ]
        },
    ]
}